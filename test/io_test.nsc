#! /usr/bin/ngraph

set +e

TEST_STR="test str..."
TEST_STR2="123"
TEST_FILE=${system::temp_file}

new io
io::open w+ $TEST_FILE
io::puts $TEST_STR
io::rewind
str=${io::gets}
if [ "$str" != "$TEST_STR" ]
then
    echo "error. (gets and puts)"
else
    echo "OK. (gets and puts)"
fi

TEST_CHAR=48
io::putc $TEST_CHAR
io::whence=cur
io::seek -1
ch=${io::getc}
if [ "$ch" -ne $TEST_CHAR ]
then
    echo "error. (putc and getc)"
else
    echo "OK. (putc and getc)"
fi

TEST_STR="123"
io::write $TEST_STR
io::whence=cur
io::seek -3
str=${io::read:3}
if [ "$str" -ne $TEST_STR ]
then
    echo "error. (read and write)"
    echo "$str"
    echo "$TEST_STR"
else
    echo "OK. (read and write)"
fi

io::flush

if [ ${io::tell} -ne 16 ]
then
    echo "error. (tell)"
else
    echo "OK. (tell)"
fi

if io::eof
then
    echo "OK. (eof)"
else
    echo "error. (eof)"
fi

io::close

io::popen r "ls io_test.nsc"
str=${io::gets}
if [ $str !=  "io_test.nsc" ]
then
    echo "error. (popen)"
else
    echo "OK. (popen)"
fi
io::close

del system
