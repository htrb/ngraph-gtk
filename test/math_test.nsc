#! /usr/bin/ngraph

set +e

while [ -n "$1" ]
do
    new rawfile  file=$1
    rawfile::open

    while l=${rawfile::gets}
    do
	eqn=${l%#*}
	val=${l#*#}

	RESULT=`dexpr "$eqn"`
	if [ "$RESULT" != "$val" ]
	then
	    echo
	    echo error "$eqn"
	    echo '    expected:' "$val"
	    echo '      result:' "$RESULT"
	    echo '  difference:' `dexpr $RESULT-$val`
	fi
    done

    rawfile::close
    shift
done


del system
